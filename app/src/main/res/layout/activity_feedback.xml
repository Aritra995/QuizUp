<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FeedbackActivity">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/app_name"
              android:textColor="@color/app_bar_color"
              android:textStyle="bold"
              android:textSize="20dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="72dp" android:layout_marginStart="72dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Send Feedback"
              android:textColor="@color/app_bar_color"
              android:textStyle="bold"
              android:id="@+id/headerLeft"
              android:textSize="22dp" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="16dp" android:layout_marginEnd="56dp" android:layout_marginRight="56dp"
              app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="1dp"
                                       android:layout_marginRight="10dp"
                                       android:layout_marginLeft="10dp"
                                       app:cardBackgroundColor="@color/app_bar_color"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintHorizontal_bias="0.5"
                                       app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
                                       app:layout_constraintTop_toBottomOf="@+id/headerLeft"
                                       android:id="@+id/cardView2"/>
    <TextView android:layout_width="332dp" android:layout_height="39dp"
              android:text="Your opinion is important to us.This way we can improve our app."
              android:textColor="@color/app_bar_color"
              android:textAlignment="center"
              android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginEnd="39dp"
              android:layout_marginRight="39dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView19"
              android:gravity="center_horizontal"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="What is your opinion on our app?"
              android:textColor="@color/app_bar_color"
              android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="104dp" android:layout_marginStart="104dp" android:layout_marginEnd="104dp"
              android:layout_marginRight="104dp" app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/textView20"/>
    <RatingBar android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/ratingBar"
               android:numStars="5"
               android:stepSize="0.5"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/textView20"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="1dp"
                                       android:layout_marginRight="10dp"
                                       android:layout_marginLeft="10dp"
                                       app:cardBackgroundColor="@color/app_bar_color"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintHorizontal_bias="0.5"
                                       app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
                                       app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                                       android:id="@+id/cardView3"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Will you recommend us to your peers?"
              android:textColor="@color/app_bar_color"
              android:textSize="15dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="9dp"
              app:layout_constraintTop_toBottomOf="@+id/cardView3" android:id="@+id/textView21"/>
    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:id="@+id/thumbsUp"
               app:srcCompat="@drawable/baseline_thumb_up_24"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="140dp"
               android:layout_marginStart="140dp" android:layout_marginTop="4dp"
               app:layout_constraintTop_toBottomOf="@+id/textView21"/>
    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:id="@+id/thumbsDown"
               app:srcCompat="@drawable/baseline_thumb_down_24"
               android:layout_marginTop="4dp"
               app:layout_constraintTop_toBottomOf="@+id/textView21" android:layout_marginEnd="140dp"
               android:layout_marginRight="140dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginLeft="31dp" android:layout_marginStart="31dp"
               app:layout_constraintStart_toEndOf="@+id/thumbsUp"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="1dp"
                                       android:layout_marginRight="10dp"
                                       android:layout_marginLeft="10dp"
                                       app:cardBackgroundColor="@color/app_bar_color"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintHorizontal_bias="0.5"
                                       app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
                                       app:layout_constraintTop_toBottomOf="@+id/thumbsDown"
                                       android:id="@+id/cardView4"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Please leave your feedback below:"
              android:textColor="@color/app_bar_color"
              android:textSize="15dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
              android:layout_marginStart="48dp" android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/cardView4" android:id="@+id/textView22"/>
    <EditText android:layout_width="match_parent" android:layout_height="100dp"
              android:layout_margin="50dp"
              android:hint="Your feedback"
              android:textAlignment="center"
              android:background="@drawable/rounded_edittext"
              android:gravity="center_vertical" tools:ignore="RtlCompat" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView22"
              android:id="@+id/editText"/>

    <ImageView android:layout_width="30dp" android:layout_height="30dp"
               android:id="@+id/sendFeedback"
               app:srcCompat="@drawable/baseline_send_24"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="16dp" android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
               app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView android:layout_width="40dp" android:layout_height="30dp"
               android:id="@+id/closeFeedback"
               app:srcCompat="@drawable/baseline_close_24"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <ImageView android:layout_width="30dp" android:layout_height="30dp"
               app:srcCompat="@drawable/baseline_message_24"
               app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintTop_toTopOf="@+id/editText"
               android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>