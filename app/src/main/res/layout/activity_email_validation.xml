<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmailValidationActivity">

    <TextView
            android:text="Almost There"
            android:textColor="@color/app_bar_color"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp"/>
    <Button
            android:text="Verify Email"
            android:layout_width="111dp"
            android:layout_height="57dp" android:id="@+id/verifyEmailButton"
            android:textColor="@color/white"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/red_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintVertical_bias="0.448"/>
    <TextView
            android:text="Verify your email address to get started"
            android:textColor="@color/app_bar_color"
            android:textSize="17dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="252dp" app:layout_constraintHorizontal_bias="0.492"/>
    <TextView
            android:text="QuizUp"
            android:textColor="@color/app_bar_color"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>